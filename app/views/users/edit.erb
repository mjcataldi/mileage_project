<h2>Edit Profile</h2>
<form action="/users/<%= @user.id %>" method="post">
  <input type="hidden" value="put" name="_method" />
  <input type="text" name="user[username]" placeholder="Username" value="<%= @user.username %>" /><br />
  <input type="email" name="user[email]" placeholder="Email" value="<%= @user.email %>"/><br />
  <input type="password" name="user[password]" placeholder="Password" /><br />
  <input type="password" name="password_confirmation" placeholder="Password Confirm" /><br />

  <input type="submit" value="Update Profile" />
</form>
